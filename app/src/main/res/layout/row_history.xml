<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rowHistoryItem"
        android:background="@drawable/bg_rounded_white"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:elevation="@dimen/_2sdp">

        <LinearLayout
            android:id="@+id/linearHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp">


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_5sdp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imvUserProfile"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@drawable/placeholder"
                    android:background="@color/white"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_vertical" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/_8sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtuserName"
                    style="@style/HW_WW"
                    android:textColor="@color/black"
                    android:text="Dinesh Ji"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="@dimen/txtSizeLarge" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvCategoryPsy"
                    style="@style/HW_WW"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="left"
                    android:text="Psychologist"
                    android:textColor="@color/color_B7B7B7"
                    android:textSize="@dimen/txtSizeSmall" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAmountPaid"
                    style="@style/HW_WW"
                    android:gravity="left"
                    android:text="Amount Paid Rs. 100"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/color_B7B7B7"
                    android:textSize="@dimen/txtSizeSmall"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDate"
                    style="@style/HW_WW"
                    android:gravity="left"
                    android:text="Date : 05-07-2020"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/color_B7B7B7"
                    android:textSize="@dimen/txtSizeSmall"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/viewLine1"
           style="@style/view_line"
            android:layout_below="@id/linearHeader"
            />

        <LinearLayout
            android:id="@+id/linearGiveRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewLine1"
            android:gravity="center"
            android:weightSum="3"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/_8sdp"
            android:foreground="@drawable/ripple_rec"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                app:srcCompat="@drawable/ic_writing"
                android:layout_marginRight="@dimen/_5sdp"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Give Rating"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/txtSizeSmall"
                android:fontFamily="@font/montserrat_regular"
                />

        </LinearLayout>


    </RelativeLayout>
</layout>